{% extends 'base.html.twig' %}

{% block title %}Hello UrlShortenerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for error in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ error }}
        </div>
    {% endfor %}

    <div class="container">   
        <div class="row d-flex justify-content-center" style="margin: 50px 0">
            <div class="col-10" style="padding:25px;">
                <div class="card">
                <h5 class="card-header">URL shortener service</h5>
                <div class="card-body">
                     {{ form_start(form, {'attr': {'data-turbo': false}}) }}
                        {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                 <div class="card-footer text-muted">
                    1. Enter any long URL and submit the form. <br />
                    2. You will get a short URL corresponding to yours. <br />
                    3. Then you can use the short URL anywhere and it will redirect you to the original one!
                </div>
           </div>
        </div>
    </div>

    <div class="container">   
        <div class="row d-flex justify-content-center" style="margin: 50px 0">
            <div class="col-2" style="padding:25px;">
                <a href="{{ path('url_shortener_list_all') }}" class="btn btn-primary" style="margin: 100px auto">View all Short URLs</a>
            </div>
        </div>
    </div>

{% endblock %}
